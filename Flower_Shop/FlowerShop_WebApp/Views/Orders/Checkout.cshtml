@model FlowerShop_WebApp.Models.Orders.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-5 checkout-section">
    <h1 class="page-section-title">@ViewData["Title"]</h1>

    <form asp-action="PlaceOrder" method="post">
        <div class="row mt-4">
            <div class="col-md-7">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Thông tin giao hàng</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="ShippingFullName" class="form-label">Họ và tên người nhận</label>
                            <input asp-for="ShippingFullName" class="form-control" />
                            <span asp-validation-for="ShippingFullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ShippingPhoneNumber" class="form-label">Số điện thoại người nhận</label>
                            <input asp-for="ShippingPhoneNumber" class="form-control" />
                            <span asp-validation-for="ShippingPhoneNumber" class="text-danger"></span>
                        </div>

                        @if (Model.SavedAddresses.Any())
                        {
                            @* === PHẦN ĐỊA CHỈ ĐÃ ĐƯỢC THAY ĐỔI THÀNH DROPDOWN === *@
                            <div class="mb-3">
                                <label asp-for="SelectedAddressId" class="form-label">Địa chỉ giao hàng</label>
                                <select asp-for="SelectedAddressId" class="form-select form-select-lg">
                                    <option value="">-- Chọn địa chỉ đã lưu --</option>
                                    @foreach (var address in Model.SavedAddresses)
                                    {
                                        <option value="@address.AddressId">
                                            @address.Detail, @address.Ward, @address.District, @address.City
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="SelectedAddressId" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                Bạn chưa có địa chỉ nào được lưu. Vui lòng
                                <a asp-controller="Profile" asp-action="Index">vào trang cá nhân</a>
                                để thêm địa chỉ.
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="CustomerNote" class="form-label">Ghi chú cho đơn hàng</label>
                            <textarea asp-for="CustomerNote" class="form-control" rows="3"></textarea>
                        </div>

                        <h4 class="mt-4">Phương thức thanh toán</h4>
                        <hr />
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="CashOnDelivery" id="cod" checked>
                            <label class="form-check-label" for="cod">
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="PayOS" id="payos">
                            <label class="form-check-label" for="payos">
                                Thanh toán qua PayOS (Thẻ ATM, Ví điện tử,...)
                            </label>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Đơn hàng của bạn</h4>
                        <hr />
                        @if (Model.Cart.Items.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="my-0">@item.ProductName</h6>
                                            <small class="text-muted">Số lượng: @item.Quantity</small>
                                        </div>
                                        <span class="text-muted">@item.LineTotal.ToString("N0") VNĐ</span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between">
                                    <strong>Tạm tính</strong>
                                    <strong>@Model.Cart.SubTotal.ToString("N0") VNĐ</strong>
                                </li>
                            </ul>
                        }
                        <div class="d-grid mt-4">
                            @if (Model.SavedAddresses.Any())
                            {
                                <button type="submit" class="btn btn-primary btn-lg">Đặt hàng</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary btn-lg" disabled>Đặt hàng</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/checkout.js" asp-append-version="true"></script>
}