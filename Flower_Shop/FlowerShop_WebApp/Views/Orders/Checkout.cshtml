@model FlowerShop_WebApp.Models.Orders.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-action="PlaceOrder" method="post">
    <div class="row mt-4">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Shipping Information</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="ShippingFullName" class="form-label"></label>
                        <input asp-for="ShippingFullName" class="form-control" />
                        <span asp-validation-for="ShippingFullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShippingPhoneNumber" class="form-label"></label>
                        <input asp-for="ShippingPhoneNumber" class="form-control" />
                        <span asp-validation-for="ShippingPhoneNumber" class="text-danger"></span>
                    </div>

                    @if (Model.SavedAddresses.Any())
                    {
                        <div class="mb-3">
                            <label asp-for="SelectedAddressId" class="form-label"></label>
                            <select asp-for="SelectedAddressId" class="form-select">
                                <option value="">-- Select a saved address --</option>
                                @foreach (var address in Model.SavedAddresses)
                                {
                                    <option value="@address.AddressId">
                                        @address.Detail, @address.Ward, @address.District, @address.City
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="SelectedAddressId" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            You have no saved addresses. Please <a asp-controller="Profile" asp-action="Index">go to your profile</a> to add an address first.
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="CustomerNote" class="form-label"></label>
                        <textarea asp-for="CustomerNote" class="form-control" rows="3"></textarea>
                    </div>

                    <h4 class="mt-4">Phương thức thanh toán</h4>
                    <hr />
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="CashOnDelivery" id="cod" checked>
                        <label class="form-check-label" for="cod">
                            Thanh toán khi nhận hàng (COD)
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="PayOS" id="payos">
                        <label class="form-check-label" for="payos">
                            Thanh toán qua PayOS (Thẻ ATM, Ví điện tử,...)
                        </label>
                    </div>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Order Summary</h4>
                    <hr />
                    @if (Model.Cart.Items.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.Cart.Items)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="my-0">@item.ProductName</h6>
                                        <small class="text-muted">Quantity: @item.Quantity</small>
                                    </div>
                                    <span class="text-muted">@item.LineTotal.ToString("N0") VND</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between">
                                <strong>Subtotal</strong>
                                <strong>@Model.Cart.SubTotal.ToString("N0") VND</strong>
                            </li>
                        </ul>
                    }
                    <div class="d-grid mt-4">
                        @if (Model.SavedAddresses.Any())
                        {
                            <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary btn-lg" disabled>Place Order</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}