@model IEnumerable<FlowerShop_WebApp.Models.Orders.OrderViewModel>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Func<string, string> getStatusBadgeClass = status => status switch
    {
        "Pending" => "bg-warning text-dark",
        "Confirmed" => "bg-info text-dark",
        "Shipping" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container mt-5">
    <h1 class="page-section-title">@ViewData["Title"]</h1>

    @if (Model != null && Model.Any())
    {
        @foreach (var order in Model)
        {
            <div class="order-history-card">
                <div class="order-info">
                    <div class="order-id">Đơn hàng #@order.OrderId.ToString().Substring(0, 8)</div>
                    <div class="order-date">Ngày đặt: @order.CreatedAt.ToString("g")</div>
                </div>
                <div class="order-total">
                    @order.Total.ToString("N0") VND
                </div>
                <div class="order-status">
                    <span class="badge rounded-pill @getStatusBadgeClass(order.Status)">@order.Status</span>
                </div>
                <div class="order-actions">
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-primary">
                        Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-receipt fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Bạn chưa có đơn hàng nào</h4>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-store me-2"></i>Bắt đầu mua sắm
            </a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/orders.css" asp-append-version="true" />
}