@model FlowerShop_WebApp.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = "Awaiting Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title">Thanh toán đơn hàng</h2>
                    <p class="text-muted">Mã đơn hàng: #@Model.OrderId.ToString().Substring(0, 8).ToUpper()</p>
                    <hr />

                    <p>Vui lòng quét mã QR dưới đây bằng ứng dụng Ngân hàng của bạn để hoàn tất thanh toán.</p>

                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <img src="@Model.TransactionId" alt="VietQR Code" class="img-fluid my-3" style="max-width: 280px; border: 1px solid #ddd; padding: 5px; border-radius: 8px;" />
                    }
                    else
                    {
                        <div class="alert alert-danger my-3">
                            <p class="mb-0"><strong>Lỗi:</strong> Không thể tạo mã thanh toán.</p>
                            <p class="mb-0">Vui lòng kiểm tra lại cấu hình hoặc thử lại sau.</p>
                        </div>
                    }

                    <div class="mt-3">
                        <h4>Tổng tiền: <span class="text-danger fw-bold">@Model.Total.ToString("N0") VND</span></h4>
                    </div>

                    <p class="mt-4 small text-muted">Sau khi thanh toán thành công, đơn hàng của bạn sẽ được tự động xử lý. Cảm ơn bạn!</p>
                    <a asp-action="History" class="btn btn-primary mt-2">Xem lại lịch sử đơn hàng</a>
                </div>
            </div>
        </div>
    </div>
</div>