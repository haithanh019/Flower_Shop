@model FlowerShop_WebApp.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = "Awaiting Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <div class="card shadow-sm">
                <div class="card-body p-4" id="payment-card">
                    <h2 class="card-title">Thanh toán đơn hàng</h2>
                    <p class="text-muted">Mã đơn hàng: #@Model.OrderId.ToString().Substring(0, 8).ToUpper()</p>
                    <hr />

                    <div id="qr-section">
                        <p>Vui lòng quét mã QR dưới đây bằng ứng dụng Ngân hàng của bạn để hoàn tất thanh toán.</p>
                        @if (!string.IsNullOrEmpty(Model.TransactionId))
                        {
                            <img src="@Model.TransactionId" alt="VietQR Code" class="img-fluid my-3" style="max-width: 280px; border: 1px solid #ddd; padding: 5px; border-radius: 8px;" />
                        }
                        else
                        {
                            <div class="alert alert-danger my-3">
                                <p class="mb-0"><strong>Lỗi:</strong> Không thể tạo mã thanh toán.</p>
                            </div>
                        }
                        <div class="mt-3">
                            <h4>Tổng tiền: <span class="text-danger fw-bold">@Model.Total.ToString("N0") VND</span></h4>
                        </div>
                        <div class="spinner-border text-primary mt-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Đang chờ xác nhận thanh toán...</p>
                    </div>

                    <div id="success-section" style="display: none;">
                        <svg class="bi bi-check-circle-fill text-success" width="80" height="80" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                        <h3 class="mt-3">Thanh toán thành công!</h3>
                        <p>Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đang được xử lý.</p>
                        <a asp-action="History" class="btn btn-primary mt-2">Xem lịch sử đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const orderId = "@Model.OrderId";
            const qrSection = document.getElementById('qr-section');
            const successSection = document.getElementById('success-section');

            const checkPaymentStatus = async () => {
                try {
                    const response = await fetch(`/Orders/CheckPaymentStatus/${orderId}`, {
                        method: 'POST',
                        headers: {
                            'Accept': 'application/json'
                        }
                    });

                    if (response.ok) {
                        const result = await response.json();
                        if (result.success === true) {
                            // Thanh toán thành công! Dừng polling và hiển thị thông báo
                            clearInterval(pollingInterval);
                            qrSection.style.display = 'none';
                            successSection.style.display = 'block';
                        }
                    }
                } catch (error) {
                    console.error("Error checking payment status:", error);
                }
            };

            // Bắt đầu polling, kiểm tra mỗi 5 giây
            const pollingInterval = setInterval(checkPaymentStatus, 5000);
        });
    </script>
}