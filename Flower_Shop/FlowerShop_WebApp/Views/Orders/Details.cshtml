@model FlowerShop_WebApp.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = $"Order Details #{Model.OrderId.ToString().Substring(0, 8)}";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header">
                Items in your order
            </div>
            <div class="card-body">
                @foreach (var item in Model.Items)
                {
                    <div class="row mb-3 border-bottom pb-3">
                        <div class="col-8">
                            <h6 class="mb-0">@item.ProductName</h6>
                            <small class="text-muted">Quantity: @item.Quantity x @item.UnitPrice.ToString("N0") VND</small>
                        </div>
                        <div class="col-4 text-end">
                            <strong>@item.LineTotal.ToString("N0") VND</strong>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header">
                Order Summary
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Order Date:</span>
                        <span>@Model.CreatedAt.ToString("f")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Status:</span>
                        <span class="badge bg-success rounded-pill">@Model.Status</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Payment Method:</span>
                        <span>@Model.PaymentMethod</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Payment Status:</span>
                        <span class="badge bg-warning text-dark rounded-pill">@Model.PaymentStatus</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <strong>Total Amount:</strong>
                        <strong>@Model.Total.ToString("N0") VND</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="History" class="btn btn-secondary">Back to Order History</a>
</div>