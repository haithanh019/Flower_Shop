@model FlowerShop_WebApp.Models.Profile.CustomerProfileViewModel
@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<div class="container mt-5">
    <h1 class="page-section-title">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-3">
            @* MENU ĐIỀU HƯỚNG SẼ ĐƯỢC CẬP NHẬT Ở CÁC BƯỚC SAU *@
            <div class="list-group profile-nav">
                <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user-circle"></i>Thông tin cá nhân
                </a>
                <a asp-action="History" asp-controller="Orders" class="list-group-item list-group-item-action">
                    <i class="fas fa-receipt"></i>Lịch sử đơn hàng
                </a>
                @* Tạm thời vô hiệu hóa các liên kết này *@
                <a asp-action="Index" asp-controller="Address" class="list-group-item list-group-item-action">
                    <i class="fas fa-map-marker-alt"></i>Sổ địa chỉ
                </a>
                <a asp-action="ChangePassword" asp-controller="Profile" class="list-group-item list-group-item-action">
                    <i class="fas fa-key"></i>Đổi mật khẩu
                </a>
            </div>
        </div>

        <div class="col-md-9">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="profile-card">
                <div class="card-header"><h5>Thông tin cá nhân</h5></div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        @* Thêm Anti-Forgery Token để bảo mật *@
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày tham gia</label>
                                <input value="@Model.CreatedAt.ToString("dd/MM/yyyy")" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-save me-2"></i>Lưu thay đổi
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>