@model FlowerShop_WebApp.Models.Auth.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="account-page">
    <div class="card account-card">
        <div class="card-body">
            <h2 class="card-title text-center">@ViewData["Title"]</h2>
            <p class="text-center text-secondary mb-4">Nhập mã OTP bạn nhận được qua email và mật khẩu mới.</p>
            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                @* Input ẩn để giữ lại email *@
                <input type="hidden" asp-for="Email" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Otp" class="form-control" placeholder="Mã OTP" />
                    <label asp-for="Otp"></label>
                    <span asp-validation-for="Otp" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="Mật khẩu mới" autocomplete="new-password" />
                    <label asp-for="NewPassword"></label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Xác nhận mật khẩu mới" autocomplete="new-password" />
                    <label asp-for="ConfirmNewPassword"></label>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Đặt lại mật khẩu</button>
                </div>
                <div class="text-center mt-4">
                    <p class="text-secondary">
                        <a asp-action="Login" class="fw-bold text-decoration-none" style="color: var(--primary-color);">Quay lại Đăng nhập</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}