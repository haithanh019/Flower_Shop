@model FlowerShop_WebApp.Models.Auth.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="account-page">
    <div class="card account-card">
        <div class="card-body">
            <h2 class="card-title text-center">@ViewData["Title"]</h2>
            <p class="text-center text-secondary mb-4">Nhập địa chỉ email của bạn để nhận mã OTP đặt lại mật khẩu.</p>
            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Gửi yêu cầu</button>
                </div>
                <div class="text-center mt-4">
                    <p class="text-secondary">
                        Nhớ mật khẩu?
                        <a asp-action="Login" class="fw-bold text-decoration-none" style="color: var(--primary-color);">Đăng nhập</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}