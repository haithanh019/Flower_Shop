@model FlowerShop_WebApp.Models.Profile.AddressViewModel
@{
    ViewData["Title"] = "Chỉnh sửa địa chỉ";
}

<div class="container mt-5">
    <h1 class="page-section-title">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="profile-card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="AddressId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label">Tỉnh/Thành phố</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="District" class="form-label">Quận/Huyện</label>
                            <input asp-for="District" class="form-control" />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Ward" class="form-label">Phường/Xã</label>
                            <input asp-for="Ward" class="form-control" />
                            <span asp-validation-for="Ward" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Detail" class="form-label">Địa chỉ chi tiết (Số nhà, tên đường...)</label>
                            <input asp-for="Detail" class="form-control" />
                            <span asp-validation-for="Detail" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>