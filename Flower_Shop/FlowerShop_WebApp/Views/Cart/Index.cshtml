@model FlowerShop_WebApp.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<div class="container my-5">
    <div class="page-header">
        <h1 class="display-font">@ViewData["Title"]</h1>
    </div>

    @if (Model != null && Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 50%;">Sản phẩm</th>
                                <th scope="col" class="text-center">Giá</th>
                                <th scope="col" class="text-center">Số lượng</th>
                                <th scope="col" class="text-end">Tạm tính</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="product-info">
                                            <img src="@(item.ProductThumbnailUrl ?? "https://via.placeholder.com/150")" class="product-image" alt="@item.ProductName">
                                            <div>
                                                <a class="text-decoration-none product-name" asp-controller="Home" asp-action="ProductDetail" asp-route-id="@item.ProductId">
                                                    @item.ProductName
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center unit-price">@item.UnitPrice.ToString("N0") VNĐ</td>
                                    <td>
                                        <form asp-action="UpdateQuantity" method="post" class="quantity-form">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <div class="quantity-adjuster">
                                                <button type="button" class="btn-quantity btn-decrease">-</button>
                                                <input type="number" id="quantity-@item.CartItemId" name="quantity" value="@item.Quantity" class="form-control quantity-input" min="1" />
                                                <button type="button" class="btn-quantity btn-increase">+</button>
                                            </div>
                                        </form>
                                    </td>
                                    <td class="text-end line-total">@item.LineTotal.ToString("N0") VNĐ</td>
                                    <td class="text-center">
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <button type="submit" class="btn-remove" title="Xóa sản phẩm">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="order-summary-card">
                    <h4>Tóm tắt đơn hàng</h4>
                    <ul>
                        <li><span>Tạm tính</span> <span>@(Model?.SubTotal.ToString("N0") ?? "0") VNĐ</span></li>
                        <li><span>Phí vận chuyển</span> <span>Miễn phí</span></li>
                        <li class="total-row"><span>Tổng cộng</span> <span>@(Model?.SubTotal.ToString("N0") ?? "0") VNĐ</span></li>
                    </ul>
                    <div class="d-grid mt-4">
                        <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary btn-lg">
                            Tiến hành thanh toán <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="cart-empty">
            <i class="fas fa-shopping-bag"></i>
            <h4>Giỏ hàng của bạn đang trống</h4>
            <p class="text-secondary">Hãy khám phá cửa hàng và chọn cho mình những sản phẩm ưng ý nhé!</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-store me-2"></i>Về trang cửa hàng
            </a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
}