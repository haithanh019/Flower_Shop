@model FlowerShop_WebApp.Models.Products.ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="image-gallery">
                @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                {
                    <img src="@Model.ImageUrls.First()" class="main-product-image" id="mainImage" alt="@Model.Name">
                    @if (Model.ImageUrls.Count > 1)
                    {
                        <div class="thumbnail-gallery">
                            @foreach (var imageUrl in Model.ImageUrls)
                            {
                                <div class="thumbnail-item @(imageUrl == Model.ImageUrls.First() ? "active" : "")">
                                    <img src="@imageUrl" alt="Thumbnail of @Model.Name">
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <img src="https://via.placeholder.com/600x500?text=Flower" class="main-product-image" alt="Placeholder">
                }
            </div>
        </div>

        <div class="col-md-6 product-info">
            <p class="category-name">@Model.CategoryName</p>
            <h1>@Model.Name</h1>
            <p class="price">@Model.Price.ToString("N0") VND</p>

            <div class="stock-status">
                @if (Model.StockQuantity > 0)
                {
                    <span class="in-stock"><i class="fas fa-check-circle me-2"></i>Còn hàng</span>
                }
                else
                {
                    <span class="out-of-stock"><i class="fas fa-times-circle me-2"></i>Hết hàng</span>
                }
                <span>(@Model.StockQuantity sản phẩm có sẵn)</span>
            </div>

            <hr class="my-4">

            <div class="d-grid gap-2 mt-4">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId" class="btn btn-primary btn-lg @(Model.StockQuantity > 0 ? "" : "disabled")">
                    <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ hàng
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="product-description-tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Mô tả sản phẩm</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="care-tab" data-bs-toggle="tab" data-bs-target="#care" type="button" role="tab" aria-controls="care" aria-selected="false">Hướng dẫn chăm sóc</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                        @Model.Description
                    </div>
                    <div class="tab-pane fade" id="care" role="tabpanel" aria-labelledby="care-tab">
                        <p><strong>Ánh sáng:</strong> Đặt hoa ở nơi có ánh sáng tự nhiên nhưng tránh ánh nắng trực tiếp.</p>
                        <p><strong>Nước:</strong> Thay nước cho hoa mỗi ngày và cắt gốc 45 độ để hoa hút nước tốt hơn.</p>
                        <p><strong>Nhiệt độ:</strong> Giữ hoa ở nơi mát mẻ, tránh xa các nguồn nhiệt hoặc gió lùa.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/product-detail.css" asp-append-version="true" />
    <script src="~/js/product-detail.js" asp-append-version="true"></script>
}