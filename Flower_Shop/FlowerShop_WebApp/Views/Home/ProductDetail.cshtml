@model FlowerShop_WebApp.Models.Products.ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                    {
                        var first = true;
                        foreach (var imageUrl in Model.ImageUrls)
                        {
                            <div class="carousel-item @(first ? "active" : "")">
                                <img src="@imageUrl" class="d-block w-100" style="height: 500px; object-fit: cover; border-radius: 8px;" alt="@Model.Name">
                            </div>
                            first = false;
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/600x500?text=Flower" class="d-block w-100" alt="Placeholder">
                        </div>
                    }
                </div>
                @if (Model.ImageUrls != null && Model.ImageUrls.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="display-5">@Model.Name</h1>
            <p class="text-muted">Category: @Model.CategoryName</p>
            <h2 class="text-danger" style="color: var(--primary-pink) !important;">@Model.Price.ToString("N0") VND</h2>
            <p class="lead">@Model.Description</p>
            <hr>
            <div class="mt-3">
                <p><strong>Stock:</strong> @(Model.StockQuantity > 0 ? "In Stock" : "Out of Stock") (@Model.StockQuantity available)</p>
            </div>
            <div class="d-grid gap-2 mt-4">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId" class="btn btn-primary btn-lg">
                    &#x1F6D2; Add to Cart
                </a>
            </div>
        </div>
    </div>
</div>