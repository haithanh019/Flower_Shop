@model IEnumerable<FlowerShop_WebApp.Models.Products.ProductViewModel>
@{
    ViewData["Title"] = "Trang Chủ";
}

<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="hero-content">
                    <h1 class="display-font">Giai điệu từ những đóa hoa</h1>
                    <p class="lead">Mỗi một bông hoa là một tâm hồn hé nở trong tự nhiên. Hãy để chúng tôi giúp bạn gửi đi những thông điệp yêu thương đẹp đẽ nhất.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">Khám phá cửa hàng</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="category-section">
    <div class="container">
        <div class="section-title">
            <p>Khám phá</p>
            <h2>Danh mục sản phẩm</h2>
        </div>
        <div class="row text-center">
            <div class="col-6 col-md-3 mb-4">
                <a href="#" class="category-card">
                    <div class="icon-wrapper">
                        <img src="https://cdn-icons-png.flaticon.com/512/2950/2950073.png" alt="Hoa tình yêu">
                    </div>
                    <h5>Hoa Tình Yêu</h5>
                </a>
            </div>
            <div class="col-6 col-md-3 mb-4">
                <a href="#" class="category-card">
                    <div class="icon-wrapper">
                        <img src="https://cdn-icons-png.flaticon.com/512/1054/1054733.png" alt="Hoa sinh nhật">
                    </div>
                    <h5>Hoa Sinh Nhật</h5>
                </a>
            </div>
            <div class="col-6 col-md-3 mb-4">
                <a href="#" class="category-card">
                    <div class="icon-wrapper">
                        <img src="https://cdn-icons-png.flaticon.com/512/9333/9333983.png" alt="Hoa khai trương">
                    </div>
                    <h5>Hoa Khai Trương</h5>
                </a>
            </div>
            <div class="col-6 col-md-3 mb-4">
                <a href="#" class="category-card">
                    <div class="icon-wrapper">
                        <img src="https://cdn-icons-png.flaticon.com/512/220/220155.png" alt="Hoa chia buồn">
                    </div>
                    <h5>Hoa Chia Buồn</h5>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="featured-products-section py-5">
    <div class="container">
        <div class="section-title">
            <p>Dành cho bạn</p>
            <h2>Sản phẩm nổi bật</h2>
        </div>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 product-card">
                            <div class="img-container">
                                <img src="@(product.ImageUrls?.FirstOrDefault() ?? "https://via.placeholder.com/300x250?text=Flower")" class="card-img-top" alt="@product.Name">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.ProductId">@product.Name</a>
                                </h5>
                                <p class="card-text">@product.Price.ToString("N0") VNĐ</p>
                                <div class="mt-auto">
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-primary btn-add-to-cart">
                                        <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Chưa có sản phẩm nổi bật nào.</p>
            }
        </div>
    </div>
</section>

<section class="why-us-section">
    <div class="container">
        <div class="section-title">
            <p>Cam kết của chúng tôi</p>
            <h2>Tại sao chọn Flowerista?</h2>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <div class="icon"><i class="fas fa-check-circle"></i></div>
                    <h5>Hoa Tươi Mỗi Ngày</h5>
                    <p class="text-secondary">Chúng tôi cam kết 100% hoa được nhập mới mỗi ngày để đảm bảo chất lượng tốt nhất.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <div class="icon"><i class="fas fa-shipping-fast"></i></div>
                    <h5>Giao Hàng Nhanh</h5>
                    <p class="text-secondary">Giao hoa hỏa tốc trong 60-90 phút tại nội thành và giao đúng giờ bạn đã chọn.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <div class="icon"><i class="fas fa-gift"></i></div>
                    <h5>Thiết Kế Tinh Tế</h5>
                    <p class="text-secondary">Mỗi sản phẩm là một tác phẩm nghệ thuật được tạo nên bởi những người thợ cắm hoa tài năng.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}