@model IEnumerable<FlowerShop_WebApp.Models.Products.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section mb-5">
    <h1 class="display-4">Welcome to Our Flower Shop</h1>
    <p class="lead">Find the perfect flowers for any occasion.</p>
    <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">Shop Now</a>
</div>


<h2 class="text-center mb-4">Featured Products</h2>
<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 product-card">
                    <img src="@(product.ImageUrls?.FirstOrDefault() ?? "https://via.placeholder.com/300x250?text=Flower")" class="product-card-img-top" alt="@product.Name">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a class="text-decoration-none text-dark" asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.ProductId">@product.Name</a>
                        </h5>
                        <p class="card-text">@product.Price.ToString("N0") VND</p>
                        <div class="mt-auto">
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-primary w-100">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center">No featured products available at the moment.</p>
    }
</div>