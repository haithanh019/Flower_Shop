@model IEnumerable<FlowerShop_WebApp.Models.Products.ProductViewModel>
@{
    ViewData["Title"] = "Cửa hàng";
    var categories = ViewBag.Categories as List<FlowerShop_WebApp.Models.Categories.CategoryViewModel>;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var currentCategory = ViewBag.CurrentCategory as Guid?;
}

<div class="container mt-5">
    <div class="section-title">
        <p>Khám phá thế giới hoa</p>
        <h2 class="display-font">Cửa hàng</h2>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <div class="category-filter">
                <h5 class="mb-3 fw-bold">Danh mục</h5>
                <div class="list-group">
                    <a asp-action="Index" asp-controller="Products" class="list-group-item list-group-item-action @(currentCategory == null ? "active" : "")">
                        <i class="fas fa-grip-horizontal"></i> Tất cả sản phẩm
                    </a>
                    @if (categories != null)
                    {
                        @foreach (var category in categories)
                        {
                            <a asp-action="Index" asp-controller="Products" asp-route-categoryId="@category.CategoryId"
                               class="list-group-item list-group-item-action @(currentCategory == category.CategoryId ? "active" : "")">
                                <i class="fas fa-tag"></i> @category.Name
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 product-card">
                                <div class="img-container">
                                    <img src="@(product.ImageUrls?.FirstOrDefault() ?? "https://via.placeholder.com/300x250?text=Flower")" class="card-img-top" alt="@product.Name">
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.ProductId">@product.Name</a>
                                    </h5>
                                    <p class="card-text mt-2">@product.Price.ToString("N0") VNĐ</p>
                                    <div class="mt-auto">
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId" class="btn btn-primary btn-add-to-cart">
                                            <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <p class="text-center text-muted mt-5">Không tìm thấy sản phẩm nào trong danh mục này.</p>
                    </div>
                }
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-categoryId="@currentCategory">Trước</a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-categoryId="@currentCategory">@i</a>
                            </li>
                        }
                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-categoryId="@currentCategory">Sau</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
}