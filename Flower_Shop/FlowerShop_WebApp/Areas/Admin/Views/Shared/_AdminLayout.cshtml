<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flowerista Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/538900c98c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading"><i class="fas fa-crown me-2"></i>Flowerista</div>
            <div class="list-group list-group-flush">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="list-group-item list-group-item-action"><i class="fas fa-tachometer-alt fa-fw me-3"></i>Bảng điều khiển</a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action"><i class="fas fa-box-open fa-fw me-3"></i>Sản phẩm</a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action"><i class="fas fa-tags fa-fw me-3"></i>Danh mục</a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="list-group-item list-group-item-action"><i class="fas fa-receipt fa-fw me-3"></i>Đơn hàng</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action"><i class="fas fa-users fa-fw me-3"></i>Người dùng</a>
                <hr class="mx-3" style="border-color: rgba(255,255,255,0.1);" />
                <a asp-area="" asp-controller="Home" asp-action="Index" target="_blank" class="list-group-item list-group-item-action"><i class="fas fa-store fa-fw me-3"></i>Xem trang web</a>
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light admin-topbar">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-user-circle me-1"></i> @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055" id="toast-container"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById("wrapper").classList.toggle("toggled");
        });

        // Tự động active sidebar item dựa trên URL
        document.addEventListener("DOMContentLoaded", function(){
            const links = document.querySelectorAll("#sidebar-wrapper .list-group-item-action");
            const currentPath = window.location.pathname;
            links.forEach(link => {
                const linkPath = new URL(link.href).pathname;
                if(currentPath === linkPath) {
                    link.classList.add("active");
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>