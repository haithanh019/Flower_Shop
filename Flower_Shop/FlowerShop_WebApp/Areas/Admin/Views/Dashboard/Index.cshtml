@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="page-header">
    <h1 class="display-font">@ViewData["Title"]</h1>
</div>

<div class="alert welcome-banner">
    <h4 class="alert-heading text-white">Chào mừng trở lại!</h4>
    <p class="lead mb-0">Đây là trung tâm quản lý của Flowerista. Chúc bạn một ngày làm việc hiệu quả!</p>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-primary h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-uppercase">Tổng doanh thu</div>
                        <div class="h4 mb-0 fw-bold">@ViewBag.TotalRevenue.ToString("N0") VNĐ</div>
                    </div>
                    <div class="col-auto card-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-success h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-uppercase">Đơn hàng mới (hôm nay)</div>
                        <div class="h4 mb-0 fw-bold">@ViewBag.NewOrders</div>
                    </div>
                    <div class="col-auto card-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-warning h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-uppercase">Đơn hàng chờ xử lý</div>
                        <div class="h4 mb-0 fw-bold">@ViewBag.PendingOrders</div>
                    </div>
                    <div class="col-auto card-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-info h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col me-2">
                        <div class="text-xs fw-bold text-uppercase">Người dùng mới (hôm nay)</div>
                        <div class="h4 mb-0 fw-bold">@ViewBag.NewUsers</div>
                    </div>
                    <div class="col-auto card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}