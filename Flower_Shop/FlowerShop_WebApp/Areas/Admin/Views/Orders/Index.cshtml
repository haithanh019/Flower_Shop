@model PagedResultViewModel<OrderViewModel>
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    var currentStatusFilter = ViewBag.CurrentStatusFilter as string;
    var orderStatuses = ViewBag.OrderStatuses as List<string> ?? new List<string>();

    Func<string, string> getStatusBadgeClass = status => status switch
    {
        "Pending" => "bg-warning text-dark",
        "Confirmed" => "bg-info text-dark",
        "Shipping" => "bg-primary",
        "Completed" => "bg-success",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="page-header">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="card management-card">
    <div class="card-header">
        <h5 class="card-title mb-0">Danh sách đơn hàng</h5>
        <form asp-action="Index" method="get" class="d-flex" style="width: 300px;">
            <select name="statusFilter" class="form-select me-2" onchange="this.form.submit()">
                <option value="">-- Lọc theo trạng thái --</option>
                @foreach (var status in orderStatuses)
                {
                    <option value="@status" selected="@(status == currentStatusFilter)">@status</option>
                }
            </select>
            <a asp-action="Index" class="btn btn-outline-secondary" title="Xóa bộ lọc"><i class="fas fa-times"></i></a>
        </form>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Email khách hàng</th>
                    <th>Ngày đặt</th>
                    <th class="text-end">Tổng tiền</th>
                    <th class="text-center">Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Items.Any())
                {
                    @foreach (var order in Model.Items)
                    {
                        <tr>
                            <td><strong>#@order.OrderId.ToString().Substring(0, 8)</strong></td>
                            <td>@order.CustomerEmail</td>
                            <td>@order.CreatedAt.ToString("g")</td>
                            <td class="text-end">@order.Total.ToString("N0") VND</td>
                            <td class="text-center"><span class="badge rounded-pill @getStatusBadgeClass(order.Status)">@order.Status</span></td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center py-4">Không có đơn hàng nào.</td></tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model != null && Model.TotalCount > Model.PageSize)
    {
        <div class="card-footer">
        </div>
    }
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/admin-management.css" asp-append-version="true" />
}