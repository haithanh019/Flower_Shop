@model FlowerShop_WebApp.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = $"Order Details #{Model.OrderId.ToString().Substring(0, 8)}";
    var orderStatuses = ViewBag.OrderStatuses as List<string> ?? new List<string>();
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">Items</div>
            <div class="card-body">
                @foreach (var item in Model.Items)
                {
                    <div class="row mb-3 border-bottom pb-3">
                        <div class="col-8">
                            <h6 class="mb-0">@item.ProductName</h6>
                            <small class="text-muted">Quantity: @item.Quantity x @item.UnitPrice.ToString("N0") VND</small>
                        </div>
                        <div class="col-4 text-end">
                            <strong>@item.LineTotal.ToString("N0") VND</strong>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header">Order Summary</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Customer:</span>
                        <span>@Model.CustomerEmail</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Order Date:</span>
                        <span>@Model.CreatedAt.ToString("f")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Payment Method:</span>
                        <span>@Model.PaymentMethod</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <strong>Total Amount:</strong>
                        <strong>@Model.Total.ToString("N0") VND</strong>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">Update Status</div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="orderId" value="@Model.OrderId" />
                    <div class="input-group">
                        <select name="status" class="form-select">
                            @foreach (var status in orderStatuses)
                            {
                                <option value="@status" selected="@(Model.Status == status)">@status</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to Orders List</a>
        </div>
    </div>
</div>