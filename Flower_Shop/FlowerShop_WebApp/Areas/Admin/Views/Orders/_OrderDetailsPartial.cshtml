@model FlowerShop_WebApp.Models.Orders.OrderViewModel
@{
    var orderStatuses = ViewBag.OrderStatuses as List<EnumDto> ?? new List<EnumDto>();
}

<form asp-action="UpdateStatus" id="orderStatusForm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="orderId" value="@Model.OrderId" />

    <div class="modal-header">
        <h5 class="modal-title">Chi tiết Đơn hàng <code>#@Model.OrderId.ToString().Substring(0, 8)</code></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
    </div>
    <div class="modal-body">
        <div id="modal-alert-placeholder"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header"><h5 class="my-1"><i class="fas fa-box-open me-2"></i>Các sản phẩm trong đơn</h5></div>
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="row mb-3 border-bottom pb-3">
                                <div class="col-8">
                                    <h6 class="mb-0">@item.ProductName</h6>
                                    <small class="text-muted">Số lượng: @item.Quantity &times; @item.UnitPrice.ToString("N0") VNĐ</small>
                                </div>
                                <div class="col-4 text-end">
                                    <strong>@item.LineTotal.ToString("N0") VNĐ</strong>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header"><h5 class="my-1"><i class="fas fa-info-circle me-2"></i>Tóm tắt Đơn hàng</h5></div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between"><span>Khách hàng:</span> <span class="fw-bold">@Model.CustomerEmail</span></li>
                            <li class="list-group-item d-flex justify-content-between"><span>Ngày đặt:</span> <span>@Model.CreatedAt.ToString("d")</span></li>
                            <li class="list-group-item"><span>Địa chỉ giao hàng:</span><div class="fw-bold text-end">@Model.ShippingAddress</div></li>
                            <li class="list-group-item d-flex justify-content-between"><span>Phương thức TT:</span> <span>@Model.PaymentMethod</span></li>
                            <li class="list-group-item d-flex justify-content-between bg-light"><strong class="text-uppercase">Tổng cộng:</strong> <strong class="text-danger">@Model.Total.ToString("N0") VNĐ</strong></li>
                        </ul>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-header"><h5 class="my-1"><i class="fas fa-sync-alt me-2"></i>Cập nhật Trạng thái</h5></div>
                    <div class="card-body">
                        <div class="input-group">
                            <select name="status" class="form-select">
                                @foreach (var status in orderStatuses)
                                {
                                    <option value="@status.Value" selected="@(Model.Status == status.DisplayName)">@status.DisplayName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu thay đổi</button>
    </div>
</form>