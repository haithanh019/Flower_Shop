@model FlowerShop_WebApp.Areas.Admin.Models.Categories.CategoryUpdateRequest
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm form-card">
            <div class="card-header">
                <h4 class="my-0 fw-normal">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="CategoryId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>