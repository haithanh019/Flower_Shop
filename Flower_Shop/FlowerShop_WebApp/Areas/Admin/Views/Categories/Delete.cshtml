@model FlowerShop_WebApp.Models.Categories.CategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="my-0 fw-normal"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <p class="fs-5">Are you sure you want to delete the category "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Yes, Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i>Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>