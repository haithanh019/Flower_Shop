@model PagedResultViewModel<OrderViewModel>

@{
    var currentPage = Model?.PageNumber ?? 1;
    var totalPages = Model != null ? (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize) : 1;
    var currentStatusFilter = ViewBag.CurrentStatusFilter as string;
    Func<string, string> getStatusBadgeClass = status => status switch
    {
        "Chờ xử lý" => "bg-warning text-dark",
        "Đã xác nhận" => "bg-info text-dark",
        "Đang giao hàng" => "bg-primary",
        "Hoàn thành" => "bg-success",
        "Đã hủy" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="table-responsive">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Mã ĐH</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th class="text-end">Tổng tiền</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Items.Any())
            {
                @foreach (var order in Model.Items)
                {
                    <tr>
                        <td><code>#@order.OrderId.ToString().Substring(0, 8)</code></td>
                        <td>@order.CustomerEmail</td>
                        <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td class="text-end fw-bold">@order.Total.ToString("N0") VNĐ</td>
                        <td class="text-center"><span class="badge @getStatusBadgeClass(order.Status)">@order.Status</span></td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-primary btn-view-details"
                                    data-bs-toggle="modal" data-bs-target="#orderModal"
                                    data-url="@Url.Action("DetailsPartial", new { id = order.OrderId })">
                                <i class="fas fa-eye me-1"></i> Xem
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6" class="text-center p-5">Không tìm thấy đơn hàng nào.</td></tr>
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <div class="card-footer">
        <nav>
            <ul class="pagination justify-content-center mb-0">
                @* Pagination content remains the same *@
            </ul>
        </nav>
    </div>
}