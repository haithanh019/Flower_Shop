@model FlowerShop_WebApp.Areas.Admin.Models.Products.ProductCreateRequest
@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="page-header">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row">
        <div class="col-md-8">
            <div class="card form-card">
                <div class="card-header"><h5 class="card-title mb-0">Thông tin cơ bản</h5></div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <div class="card form-card mb-4">
                <div class="card-header"><h5 class="card-title mb-0">Tổ chức</h5></div>
                <div class="card-body">
                     <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="@Model.CategoryList">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                     <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive">
                        <label class="form-check-label" asp-for="IsActive"></label>
                    </div>
                </div>
            </div>
            <div class="card form-card">
                <div class="card-header"><h5 class="card-title mb-0">Giá & Kho hàng</h5></div>
                 <div class="card-body">
                     <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label"></label>
                        <input asp-for="StockQuantity" class="form-control" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                 </div>
            </div>
             <div class="card form-card mt-4">
                <div class="card-header"><h5 class="card-title mb-0">Hình ảnh</h5></div>
                <div class="card-body">
                     <label asp-for="ImageFiles" class="form-label"></label>
                    <input asp-for="ImageFiles" class="form-control" type="file" multiple />
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>
             </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu sản phẩm</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</form>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-management.css" asp-append-version="true" />
}