@model FlowerShop_WebApp.Areas.Admin.Models.Products.ProductUpdateRequest

@{
    var isCreate = Model.ProductId == Guid.Empty;
}

<form asp-action="@(isCreate ? "Create" : "Edit")" id="productForm" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <div class="modal-header">
        <h5 class="modal-title">@(isCreate ? "Thêm sản phẩm mới" : "Chỉnh sửa sản phẩm")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
    </div>
    <div class="modal-body">
        <div id="modal-alert-placeholder"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="12"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StockQuantity" class="form-label"></label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@Model.CategoryList">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive">
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>
                <hr />
                <div class="mb-3">
                    @if (!isCreate)
                    {
                        <label class="form-label">Ảnh hiện tại</label>
                        @if (Model.ExistingImageUrls != null && Model.ExistingImageUrls.Any())
                        {
                            <div class="d-flex flex-wrap gap-2 mb-3" id="existing-images-container">
                                @foreach (var imageUrl in Model.ExistingImageUrls)
                                {
                                    <div class="image-thumbnail-container">
                                        <img src="@imageUrl" class="img-thumbnail" alt="Product Image" />
                                        <button type="button" class="btn-close btn-delete-image" title="Xóa ảnh này"
                                                data-product-id="@Model.ProductId"
                                                data-image-url="@imageUrl"></button>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted" id="no-images-text">Sản phẩm này chưa có ảnh.</p>
                        }
                    }

                    <label asp-for="ImageFiles" class="form-label"></label>
                    <input asp-for="ImageFiles" class="form-control" type="file" multiple />
                    <small class="form-text text-muted">Tải ảnh mới để thêm vào danh sách ảnh hiện có.</small>
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Lưu
        </button>
    </div>
</form>