@model FlowerShop_WebApp.Models.Products.ProductViewModel
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="page-header">
    <h1 class="h2 text-danger">@ViewData["Title"]</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="my-0 fw-normal"><i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa</h5>
            </div>
            <div class="card-body">
                <p class="fs-5">Bạn có chắc chắn muốn xóa sản phẩm "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger">Hành động này không thể hoàn tác.</p>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Danh mục</dt>
                    <dd class="col-sm-9">@Model.CategoryName</dd>
                    <dt class="col-sm-3">Giá</dt>
                    <dd class="col-sm-9">@Model.Price.ToString("N0") VND</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProductId" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i>Đồng ý, Xóa</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times me-2"></i>Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>