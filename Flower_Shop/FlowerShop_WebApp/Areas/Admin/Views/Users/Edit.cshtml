@model FlowerShop_WebApp.Models.Users.UserViewModel
@{
    ViewData["Title"] = "Chỉnh sửa vai trò người dùng";
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
}

<div class="page-header">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card form-card">
            <div class="card-header"><h5 class="card-title mb-0">Thông tin người dùng</h5></div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select">
                            @foreach (var role in roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu vai trò</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-management.css" asp-append-version="true" />
}