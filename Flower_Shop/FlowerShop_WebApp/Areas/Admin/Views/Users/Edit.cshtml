@model FlowerShop_WebApp.Models.Users.UserViewModel
@{
    ViewData["Title"] = "Edit User Role";
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm form-card">
            <div class="card-header">
                <h4 class="my-0 fw-normal">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select">
                            @foreach (var role in roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Role</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>