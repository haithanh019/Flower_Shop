@model FlowerShop_WebApp.Models.Users.UserViewModel
@{
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
}

<form asp-action="Edit" id="userForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="modal-header">
        <h5 class="modal-title">Chỉnh sửa vai trò người dùng</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
    </div>
    <div class="modal-body">
        <div id="modal-alert-placeholder"></div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Họ và tên</label>
            <input asp-for="FullName" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label">Vai trò</label>
            <select asp-for="Role" class="form-select">
                @foreach (var role in roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Lưu vai trò
        </button>
    </div>
</form>