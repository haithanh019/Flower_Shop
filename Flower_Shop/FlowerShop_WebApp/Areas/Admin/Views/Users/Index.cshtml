@model IEnumerable<FlowerShop_WebApp.Models.Users.UserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @if (user.Role == "Admin")
                    {
                        <span class="badge bg-danger rounded-pill">@user.Role</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary rounded-pill">@user.Role</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-secondary">Edit Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>