@model IEnumerable<FlowerShop_WebApp.Models.Users.UserViewModel>
@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="page-header">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="card management-card">
    <div class="card-header">
         <h5 class="card-title mb-0">Danh sách người dùng</h5>
        <form asp-action="Index" method="get" class="d-flex" style="width: 300px;">
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control me-2" placeholder="Tìm theo tên hoặc email..." />
            <button type="submit" class="btn btn-outline-primary"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Họ và tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th class="text-center">Vai trò</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><strong>@user.FullName</strong></td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td class="text-center">
                            @if (user.Role == "Admin")
                            {
                                <span class="badge bg-danger">@user.Role</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@user.Role</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-user-edit me-1"></i>Sửa vai trò
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/admin-management.css" asp-append-version="true" />
}