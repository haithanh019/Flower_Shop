@model IEnumerable<FlowerShop_WebApp.Models.Users.UserViewModel>
@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="d-flex justify-content-between mb-3">
    <h1 class="h2">@ViewData["Title"]</h1>

    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control me-2" placeholder="Tìm theo tên hoặc email..." style="width: 300px;" />
        <button type="submit" class="btn btn-outline-secondary">Tìm kiếm</button>
    </form>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @if (user.Role == "Quản trị viên")
                    {
                        <span class="badge bg-danger rounded-pill">@user.Role</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary rounded-pill">@user.Role</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-secondary">Sửa vai trò</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Styles {
    <link rel="stylesheet" href="~/css/admin-management.css" asp-append-version="true" />
}